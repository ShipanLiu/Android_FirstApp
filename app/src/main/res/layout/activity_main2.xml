<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!--wrap_content is used to wrap the view according to its actual size.
    It can be used with layout_height as well as layout_width.
    If we set layout_height as wrap_content then the height will be the same as the content size-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text2" />



</LinearLayout>