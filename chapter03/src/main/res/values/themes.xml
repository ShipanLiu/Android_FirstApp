<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge ===>  组件颜色可以变-->
    <!--parent="Theme.MaterialComponents.DayNight.DarkActionBar ===>  组件不能改变， 必须是 Theme颜色-->
    <style name="Theme.FirstApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>